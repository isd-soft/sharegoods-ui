{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": [],
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ]

    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
